<%= render("layouts/errors", :object => @product) %>

<%= form_for @product, :url => product_path, :html => { :multipart => true } do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="form-group">
    <%= f.label :index %>
    <%= f.file_field :index %>
  </div>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
